<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/imageViewWalletIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/bank_icon"
        android:background="@drawable/rounded_card"
        android:padding="8dp"
        app:tint="@color/icon_tint_color"
        tools:src="@drawable/ic_cash" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewWalletBalance"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="$123.45"
            android:textSize="16sp"
            android:fontFamily="@font/public_sans_medium"
            android:textColor="@color/text_color_primary"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/textViewWalletName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Cash"
            android:textSize="16sp"
            android:fontFamily="@font/public_sans_regular"
            android:textColor="@color/text_color_secondary"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>