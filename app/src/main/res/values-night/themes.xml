<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Тема приложения, которая автоматически переключается между светлой и темной -->
    <style name="Base.Theme.MoneyFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Настройки для темной темы -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/gray</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">@color/light_blue</item> <!-- Основной цвет -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Цвет основного текста -->
        <item name="android:textColorSecondary">@color/white</item> <!-- Цвет вторичного текста -->
        <item name="colorOnPrimary">@color/white</item> <!-- Цвет текста на фоне colorPrimary -->
    </style>
</resources>
