<resources>

    <style name="Base.Theme.MoneyFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:colorBackground">@color/my_dark_background</item>
        <item name="colorPrimary">@color/my_dark_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/very_light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
    </style>

    <style name="Theme.MoneyFlow.AuthScreen" parent="Base.Theme.MoneyFlow">
        <item name="colorPrimary">@color/my_dark_background</item>
        <item name="android:colorBackground">@color/my_dark_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MoneyFlow" parent="Base.Theme.MoneyFlow" />

    <color name="button_text_color">#FFFFFF</color>
    <color name="background">#000000</color>
    <color name="item_background">#1a1a1a</color>
    <color name="circle_background">#1a1a1a</color>
    <color name="primary">#5C84F2</color>
    <color name="text_color_primary">#FFF</color>
    <color name="adapter_bg_unchecked">#3E3E3E</color>
    <color name="adapter_bg_checked">#5C84F2</color>
    <color name="bottom_navigation_background">#000000</color>

    <attr name="cardBackgroundColor" format="reference|color" />
</resources>
