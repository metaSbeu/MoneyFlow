<resources>

    <style name="Base.Theme.MoneyFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnPrimary">@color/button_text_color</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="cardBackgroundColor">@color/secondary</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Theme.MoneyFlow.AuthScreen" parent="Base.Theme.MoneyFlow">
        <item name="colorPrimary">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MoneyFlow" parent="Base.Theme.MoneyFlow" />

    <!-- Theme colors -->
    <color name="button_text_color">#241F0F</color>
    <color name="background">#241F0F</color>
    <color name="secondary_background">#493F21</color>
    <color name="text_color_primary">#FDFDFD</color>
    <color name="text_color_secondary">#CABC8E</color>
    <color name="selected_background">#61593F</color>
    <color name="circle_background">#A4A4A4</color>
    <color name="primary">#F8C538</color>
    <color name="secondary">#61593F</color>
    <color name="icon_tint_color">#FDFDFD</color>
    <color name="stroke_color">#6A582E</color>
    <color name="auth_button_text_color">#FFF</color>


    <color name="bottom_navigation_background">#362E17</color>
    <color name="bottom_navigation_icon_background">#CABC8E</color>
    <attr name="cardBackgroundColor" format="reference|color" />

    <color name="bottom_navigation_text_color_active">#FDFDFD</color>
    <color name="bottom_navigation_text_color_inactive">#CABC8E</color>
    <color name="bottom_navigation_icon_color_active">#FDFDFD</color>
    <color name="bottom_navigation_icon_color_inactive">#BDAF84</color>
</resources>
