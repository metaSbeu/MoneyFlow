<resources>

    <style name="Base.Theme.MoneyFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnPrimary">@color/button_text_color</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="cardBackgroundColor">@color/secondary</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Theme.MoneyFlow.AuthScreen" parent="Base.Theme.MoneyFlow">
        <item name="colorPrimary">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MoneyFlow" parent="Base.Theme.MoneyFlow" />

    <!-- Theme colors -->
    <color name="button_text_color">#122117</color>
    <color name="background">#122117</color>
    <color name="secondary_background">#264433</color>
    <color name="text_color_primary">#FFFFFF</color>
    <color name="text_color_secondary">#96C4A8</color>
    <color name="selected_background">#264433</color>
    <color name="circle_background">#A4A4A4</color>
    <color name="primary">#38DE77</color>
    <color name="secondary">#264433</color>
    <color name="icon_tint_color">#FFFFFF</color>
    <color name="stroke_color">#366347</color>
    <color name="auth_button_text_color">#FFF</color>


    <color name="bottom_navigation_background">#1C3024</color>
    <color name="bottom_navigation_icon_background">#38DE77</color>
    <attr name="cardBackgroundColor" format="reference|color" />

    <color name="bottom_navigation_text_color_active">#FFFFFF</color>
    <color name="bottom_navigation_text_color_inactive">#96C4A8</color>
    <color name="bottom_navigation_icon_color_active">#FFFFFF</color>
    <color name="bottom_navigation_icon_color_inactive">#96C4A8</color>
</resources>
