<resources>

    <style name="Base.Theme.MoneyFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">#F8C438</item>
        <item name="colorSecondary">@color/very_light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">#3D3930</item>
        <item name="cardBackgroundColor">#F3EEE3</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <style name="Theme.MoneyFlow.AuthScreen" parent="Base.Theme.MoneyFlow">
        <item name="colorPrimary">@color/background</item>
    </style>

    <style name="Theme.MoneyFlow" parent="Base.Theme.MoneyFlow" />

    <!-- Theme colors -->
    <color name="button_text_color">#1C170D</color>
    <color name="background">#FAF8F5</color>
    <color name="secondary_background">#F3EEE3</color>
    <color name="text_color_primary">#1C170D</color>
    <color name="text_color_secondary">#9D8646</color>
    <color name="selected_background">#F3EEE3</color>
    <color name="circle_background">#A4A4A4</color>
    <color name="primary">#F8C538</color>
    <color name="secondary">#F3EEE3</color>
    <color name="icon_tint_color">#1C170D</color>
    <color name="stroke_color">#9D8646</color>
    <color name="auth_button_text_color">#000</color>

    <color name="bottom_navigation_background">#FFFFFF</color>
    <color name="bottom_navigation_icon_background">#9D8646</color>

    <attr name="cardBackgroundColor" format="reference|color" />

    <color name="bottom_navigation_text_color_active">#1C170D</color>
    <color name="bottom_navigation_text_color_inactive">#9D8646</color>
    <color name="bottom_navigation_icon_color_active">#1C170D</color>
    <color name="bottom_navigation_icon_color_inactive">#9D8646</color>
</resources>