<resources>

    <style name="Base.Theme.MoneyFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorBackgroundFloating">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/very_light_blue</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <style name="Theme.MoneyFlow.AuthScreen" parent="Base.Theme.MoneyFlow">
        <item name="colorPrimary">@color/background</item>
    </style>

    <style name="Theme.MoneyFlow" parent="Base.Theme.MoneyFlow" />

    <!-- Theme colors -->
    <color name="button_text_color">#0D1A12</color>
    <color name="background">#F7FAFA</color>
    <color name="secondary_background">#E8F2ED</color>
    <color name="text_color_primary">#0D1A12</color>
    <color name="text_color_secondary">#52946B</color>
    <color name="selected_background">#E8F2ED</color>
    <color name="circle_background">#A4A4A4</color>
    <color name="primary">#38DE77</color>
    <color name="secondary">#E6F0EB</color>

    <color name="bottom_navigation_background">#FFFFFF</color>
    <color name="bottom_navigation_icon_background">#60DC8F</color>

    <attr name="cardBackgroundColor" format="reference|color" />

    <color name="bottom_navigation_text_color_active">#0D1A12</color>
    <color name="bottom_navigation_text_color_inactive">#52946B</color>
    <color name="bottom_navigation_icon_color_active">#0D1A12</color>
    <color name="bottom_navigation_icon_color_inactive">#52946B</color>
</resources>